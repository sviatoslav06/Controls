<Window x:Class="Controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MaxHeight="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Height="100" Width="100" Background="Teal" FontSize="24" Click="Button_Click" Grid.Row="1">Press</Button>
        <Button Background="Green" FontSize="24" Grid.ColumnSpan="3" Click="Button_Click_1" Margin="10,0,0,0">XD</Button>
        <Button Background="Pink" FontSize="24" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2">LOL</Button>
        <TextBox Name="Login" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"></TextBox>
    </Grid>
</Window>
